<script type="text/javascript">
    function ActivateUser(ActivateID) {
        var User = {
            ID: ActivateID
            };
            $.ajax({
                url: '@Url.Action("Activate", "Authority")',
                type: 'POST',
                dataType: 'json',
                data: User,
                success: function (data) {
                    alertify.success('Activate işlemi gerçekleştirildi.');
                    $("#" + ActivateID).fadeOut("slow");
                }
            });
    }
</script>




