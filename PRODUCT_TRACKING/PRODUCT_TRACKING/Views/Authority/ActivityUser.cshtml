@using PRODUCT_TRACKING.Models.Entities
@model List<User>
@{
    ViewBag.Title = "ActivityUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">On Loan Product</h1>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Products
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>User Name Surname</th>
                            <th>User Name</th>
                            <th colspan="2" class="text-center">Options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>User Name Surname</th>
                            <th>User Name</th>
                            <th colspan="2" class="text-center">Options</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (User item in Model)
                        {
                            <tr id="@item.Id">
                                <td>@(item.Name+" "+item.Surname)</td>
                                <td>@item.username</td>                                
                                <td><input type="submit" value="Activate" class="btn btn-success" id="Activate" onclick="ActivateUser(@item.Id)" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>


